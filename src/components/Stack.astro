---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'a'> {}

const { class: className } = Astro.props;
---

<a
  href="https://github.com/luisfuturist"
  target="_blank"
  class:list={["mt-16 w-[calc(100%-1rem)] min-h-36 flex items-center justify-center relative", className]}
>
  <div
    class="z-[20] bg-azure-6 text-black rounded-lg flex flex-col items-center justify-between w-full min-h-36 p-4"
  >
    <slot />
  </div>

  <div
    class="bottom-4 left-4 absolute w-full h-full bg-azure-1 border rounded-lg border-azure-6"
  >
  </div>
  <div
    class="bottom-2 left-2 absolute w-full h-full bg-azure-1 border rounded-lg border-azure-6"
  >
  </div>
</a>