---
const footerLinks = [
  { label: "Home", href: "/#home" },
  { label: "About", href: "/#about" },
  { label: "Portfolio", href: "/#portfolio" },
  { label: "Contact", href: "/#contact" },
];

const year = new Date().getFullYear();
---

<footer class="px-4 max-w-4xl mx-auto">
  <div
    class="border-t border-azure-6 py-4 flex flex-col md:flex-row md:items-center justify-between"
  >
    <p
      class="order-2 md:order-1 flex gap-[1ch] items-center text-azure-6 font-display text-xs mt-4 md:mt-0"
    >
      {year} ———— <span class="font-mono">Generated by</span>
      <span class="font-display">AI</span>
      <span class="font-mono">+</span>
      <a href="/#home">Luis Emidio</a>
    </p>

    <nav class="order-1 md:order-2 flex gap-2 flex-wrap">
      {
        footerLinks.map((link) => (
          <ul>
            <li>
              <a
                href={link.href}
                class="text-sm font-medium mb-2 md:mb-0 text-azure-6 hover:text-azure-7"
              >
                {link.label}
              </a>
            </li>
          </ul>
        ))
      }
    </nav>
  </div>
</footer>
