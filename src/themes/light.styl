theme-light() {
    --lfds-body-bg: color-white;

    --lfds-scrollbar-bg: color-gray-8;
    --lfds-scrollbar-thumb-normal: color-gray-7;
    --lfds-scrollbar-thumb-hover: color-azure-4;

    --lfds-selection-bg: color-gray-8;
    --lfds-selection-color: color-gray-1;

    --lfds-focus-outline: alpha(color-azure-4, 0.1);

    --lfds-topbar-text-color: color-gray-5;
    --lfds-topbar-border-color: color-orange-8;

    --lfds-navbar-bg: color-white;
    --lfds-navbar-border-color: color-gray-8;

    --lfds-link-color-normal: color-gray-1;
    --lfds-link-color-hover: color-azure-4;
    --lfds-link-color-disabled: color-gray-5;
    --lfds-link-bg-hover: alpha(color-azure-5, 0.4);

    --lfds-popover-bg: color-white;
    --lfds-popover-text-color: color-gray-4;
    --lfds-popover-border-color: color-gray-8;
    --lfds-popover-shadow: rgba(165, 165, 165, 0.4);

    --lfds-hero-title-color: color-azure-4;
    --lfds-hero-text-color: color-gray-4;

    --lfds-pattern-matrix-overlay: color-white;
    --lfds-pattern-matrix-color: color-azure-4;

    --lfds-section-title: color-azure-4;
    --lfds-section-title-2: color-gray-2;
    --lfds-section-number: color-gray-6;
    --lfds-section-text: color-gray-3;
    
    --lfds-footer-bg: color-gray-8;
    --lfds-footer-text-color: color-gray-2;
}